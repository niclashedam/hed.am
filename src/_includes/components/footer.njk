<footer class="antialiased bg-black text-gray-200 body-font">
  <div
    class="container flex flex-col items-center px-8 py-8 mx-auto max-w-7xl sm:flex-row">
    <p class="mt-4 text-sm text-gray-300 sm:ml-4 sm:pl-4 sm:mt-0">&copy; 2025 Niclas Hedam</p>
    <span
      class="inline-flex justify-center mt-4 space-x-5 sm:ml-auto sm:mt-0 sm:justify-start">
      {% for item in footer %}
        <a
          href="{{ item.href }}"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-300 hover:text-gray-500 text-2xl">
          <span class="sr-only">{{ item.sr }}</span>
          <i class="{{ item.icon }}"></i>
        </a>
      {% endfor %}
    </span>
  </div>
</footer>
{% if eleventyNavigation and eleventyNavigation.key %}
  {% set breadcrumbs = collections.all | eleventyNavigationBreadcrumb(page.url, { includeSelf: true }) %}
{% endif %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "WebSite",
        "@id": "https://hed.am/#website",
        "url": "https://hed.am/",
        "name": "hed.am",
        "alternateName": "Niclas Hedam",
        "inLanguage": "{{ language or 'en' }}",
        "publisher": {
          "@id": "https://hed.am/#person"
        },
        "potentialAction": [
          {
            "@type": "ReadAction",
            "name": "Browse all blog posts",
            "target": {
              "@type": "EntryPoint",
              "urlTemplate": "https://hed.am/blog/"
            }
          }
        ]
      }, {
        "@type": "Person",
        "@id": "https://hed.am/#person",
        "name": "Niclas Hedam",
        "url": "https://hed.am/",
        "jobTitle": "Security Advisor",
        "worksFor": {
          "@type": "Organization",
          "name": "itm8"
        },
        "image": {
          "@type": "ImageObject",
          "url": "https://hed.am/assets/images/niclas.jpeg"
        },
        "sameAs": [
          "https://orcid.org/0000-0001-5847-8419",
          "https://scholar.google.com/citations?user=DdLrWgwAAAAJ",
          "https://www.researchgate.net/profile/Niclas-Hedam",
          "https://github.com/niclashedam",
          "https://www.linkedin.com/in/hedam",
          "https://dblp.uni-trier.de/pid/257/5600.html"
        ],
        "potentialAction": [
          {
            "@type": "FollowAction",
            "target": [
              {
                "@type": "EntryPoint",
                "urlTemplate": "https://linkedin.com/in/hedam",
                "name": "Follow on LinkedIn"
              }, {
                "@type": "EntryPoint",
                "urlTemplate": "https://github.com/niclashedam",
                "name": "Follow on GitHub"
              }
            ]
          }
        ]
      }
      {% if type == "article" %}, {
          "@type": "WebPage",
          "@id": "https://hed.am{{ page.url }}#webpage",
          "url": "https://hed.am{{ page.url }}",
          "name": "{{ title }}",
          "description": "{{ (description or excerpt or '') | striptags | trim }}",
          "inLanguage": "{{ language or 'en' }}",
          "isPartOf": {
            "@id": "https://hed.am/#website"
          }{% if date %},
            "datePublished": "{{ date | machineDate }}"{% endif %}{% if image %},
            "primaryImageOfPage": {
              "@type": "ImageObject",
              "url": "https://hed.am{{ image | url }}"
            }{% endif %},
          "author": {
            "@id": "https://hed.am/#person"
          }
        }, {
          "@type": "BlogPosting",
          "@id": "https://hed.am{{ page.url }}#article",
          "headline": "{{ title }}",
          "description": "{{ (description or excerpt or '') | striptags | trim }}",
          "mainEntityOfPage": {
            "@id": "https://hed.am{{ page.url }}#webpage"
          },
          "isPartOf": {
            "@id": "https://hed.am/#website"
          },
          "inLanguage": "{{ language or 'en' }}",
          "url": "https://hed.am{{ page.url }}"{% if image %},
            "image": {
              "@type": "ImageObject",
              "url": "https://hed.am{{ image | url }}"
            }{% endif %}{% if date %},
            "datePublished": "{{ date | machineDate }}"{% endif %}{% if keywords %},
            "keywords": "{{ keywords | join(', ') }}",{% endif %}
          "wordCount": {{ wordCount }},
          "author": {
            "@id": "https://hed.am/#person"
          },
          "publisher": {
            "@id": "https://hed.am/#person"
          },
          "isAccessibleForFree": true
        }
      {% else %}, {
          "@type": "WebPage",
          "@id": "https://hed.am{{ page.url }}#webpage",
          "url": "https://hed.am{{ page.url }}",
          "name": "{{ title }}",
          "description": "{{ (description or '') | striptags | trim }}",
          "inLanguage": "{{ language or 'en' }}",
          "isPartOf": {
            "@id": "https://hed.am/#website"
          }{% if date %},
            "datePublished": "{{ date | machineDate }}"{% endif %}{% if image %},
            "primaryImageOfPage": {
              "@type": "ImageObject",
              "url": "https://hed.am{{ image | url }}"
            }{% endif %},
          "author": {
            "@id": "https://hed.am/#person"
          }
        }
      {% endif %}
      {% if breadcrumbs and breadcrumbs.length %}, {
          "@type": "BreadcrumbList",
          "@id": "https://hed.am{{ page.url }}#breadcrumb",
          "itemListElement": [
            {% for item in breadcrumbs %}{
              "@type": "ListItem",
              "position": {{ loop.index }},
              "name": "{{ item.title }}",
              "item": "https://hed.am{{ item.url }}"
            }{% if not loop.last %}, {% endif %}{% endfor %}
          ]
        }
      {% endif %}
    ]
  }
</script>
